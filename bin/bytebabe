# FunÃ§Ã£o para mostrar o header cyberpunk
show_cyberpunk_header() {
    echo -e "${CYBER_PINK}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
